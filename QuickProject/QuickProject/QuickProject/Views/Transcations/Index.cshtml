        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentGateWay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TranscationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
