@model EntityModel.Payments

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Payments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TranscationId" class="control-label"></label>
